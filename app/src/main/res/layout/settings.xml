<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/settings_user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text="Name" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_change_email" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Maybe don't show at all, just make it possible to update -->
        <TextView
            android:id="@+id/settings_user_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text="Name" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_change_password" />



    </LinearLayout>
    <!-- Dark Mode Switch -->

    <Switch
        android:id="@+id/dark_mode_switch"
        android:layout_width="378dp"
        android:layout_height="71dp"
        android:layout_gravity="end"
        android:text="Dark Mode" />
    <!-- Notification Switch -->
    <Switch
        android:id="@+id/noti_switch"
        android:layout_width="378dp"
        android:layout_height="71dp"
        android:layout_gravity="end"
        android:text="Notifications" />

</LinearLayout>