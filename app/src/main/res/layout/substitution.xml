<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- existing AppBarLayout, Toolbar, and other views -->

        <EditText
            android:id="@+id/xor_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text="@string/key_input" />

        <EditText
            android:id="@+id/xor_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text="@string/msg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/transposition_encrypt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="69dp"
                android:drawableStart="@android:drawable/ic_lock_lock"
                android:drawablePadding="8dp"
                android:drawableTint="#FFFFFF"
                android:text="@string/Encryption_btn" />

            <Button
                android:id="@+id/transposition_decrypt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="69dp"
                android:drawableStart="@drawable/baseline_lock_24"
                android:drawablePadding="8dp"
                android:drawableTint="#FFFFFF"
                android:text="@string/Decryption_btn" />
        </LinearLayout>

        <TextView
            android:id="@+id/substitution_out"
            android:layout_width="380dp"
            android:layout_height="294dp"
            android:layout_margin="16dp"
            android:background="#FFFFFFFF"
            android:gravity="top|left"
            android:padding="4dp"
            android:text="Cipher or message here"
            android:textColor="#000000"
            android:textIsSelectable="true"
            android:textSize="18sp" />


        <!-- the TextView text & color will remain static until then...  -->

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


